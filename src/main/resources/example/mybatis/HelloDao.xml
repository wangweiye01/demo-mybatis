<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.hello.repository.HelloDao">
    <sql id="helloColumn">
        id,
        email
    </sql>

    <select id="findList" resultType="com.example.demo.hello.entity.Hello">
        SELECT
        <include refid="helloColumn"/>
        FROM user
    </select>
</mapper>